<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >
           
		<GridLayout
      	    android:layout_width="match_parent"
          	android:layout_height="wrap_content"
          	android:columnCount="4">
   
          	<ImageView
          	    android:id="@+id/imageView1"
          	    android:layout_column="0"
          	    android:layout_row="0"
          	    android:contentDescription="@string/picture_description"
          	    android:src="@drawable/ic_launcher" />

       		<TextView
               	android:id="@+id/textview_spend"
               	android:layout_row="1"
            	android:layout_column="0"
               	android:text="@string/view_spend"
               	android:textAppearance="?android:attr/textAppearanceSmall" />

           	<EditText
               	android:id="@+id/edittext_spend"
               	android:layout_row="1"
            	android:layout_column="1"
            	android:layout_columnSpan="2"
               	android:ems="10"
               	android:inputType="number" >

               	<requestFocus />
           	</EditText>

           	<TextView
               	android:id="@+id/textview_date"
               	android:layout_row="2"
            	android:layout_column="0"
               	android:text="@string/view_date"
               	android:textAppearance="?android:attr/textAppearanceSmall" />

           	<DatePicker
               	android:id="@+id/datepicker"
               	android:layout_row="2"
            	android:layout_column="1"
            	android:layout_columnSpan="2"
               	android:calendarViewShown="false"
               	android:spinnersShown="true" />

           	<TextView
               	android:id="@+id/textview_class"
               	android:layout_row="3"
            	android:layout_column="0"
               	android:text="@string/view_class"
               	android:textAppearance="?android:attr/textAppearanceSmall" />

           	<Spinner
               	android:id="@+id/spinner_class"
				android:layout_row="3"
            	android:layout_column="1"
            	android:layout_columnSpan="2"/>

           	<TextView
               	android:id="@+id/textview_note"
               	android:layout_row="4"
            	android:layout_column="0"
               	android:text="@string/view_note"
               	android:textAppearance="?android:attr/textAppearanceSmall" />

           	<EditText
               	android:id="@+id/edittext_note"
               	android:layout_row="4"
            	android:layout_column="1"
            	android:layout_columnSpan="2"
               	android:ems="10"
               	android:inputType="textMultiLine" />

      		<Button
          		android:id="@+id/button_ok"
          		android:layout_row="5"
            	android:layout_column="0"
          		style="?android:attr/buttonBarButtonStyle"
          		android:text="@string/ok" />

      		<Button
	        	android:id="@+id/button_cancel"
	        	android:layout_row="5"
            	android:layout_column="1"
            	android:layout_columnSpan="2"
               	style="?android:attr/buttonBarButtonStyle"
	        	android:text="@string/cancel" />
   
	</GridLayout>
</ScrollView>