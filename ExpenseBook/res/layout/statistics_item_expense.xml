<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<ImageView
			android:layout_width="100dp"
			android:layout_height="60dp"
			android:id="@+id/statistics_item_view_picture"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="13dp"
			android:src="@drawable/ic_launcher"
			android:layout_alignParentEnd="false"
			android:layout_alignParentStart="true"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/statics_view_spend"
			android:id="@+id/textView"
			android:layout_marginLeft="15dp"
			android:layout_alignTop="@+id/statistics_item_view_picture"
			android:layout_toRightOf="@+id/statistics_item_view_picture"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="0"
			android:id="@+id/statistics_item_spend"
			android:layout_alignTop="@+id/textView"
			android:layout_toRightOf="@+id/textView"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="元"
			android:id="@+id/textView3"
			android:layout_alignTop="@+id/statistics_item_spend"
			android:layout_alignParentRight="true"
			android:layout_marginRight="11dp"
			android:layout_toRightOf="@+id/statistics_item_spend"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="2013/5/24"
			android:id="@+id/statistics_item_view_date"
			android:layout_alignLeft="@+id/textView"
			android:layout_below="@+id/textView"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="未分類"
			android:id="@+id/statistics_item_view_category"
			android:layout_toRightOf="@+id/statistics_item_view_date"
			android:layout_alignParentEnd="false"
			android:layout_marginLeft="10dp"
			android:layout_below="@+id/textView3"/>
</RelativeLayout>