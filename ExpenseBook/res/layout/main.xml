<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:clipChildren="false">

	<LinearLayout
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/linearLayout"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentStart="false"
	        android:gravity="top"
	        android:layout_alignParentEnd="false">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/main_button_create_new_epense"
				android:id="@+id/main_button_new_expense"
				android:background="@color/main"
				android:textColor="@color/font_white"
				android:drawableLeft="@android:drawable/ic_menu_camera"
				android:layout_weight="1"
				/>

		<Button
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/main_button_browse"
	            android:id="@+id/main_button_browse"
	            android:background="@color/main"
	            android:textColor="@color/font_white"
	            android:drawableLeft="@android:drawable/ic_menu_view"
	            android:layout_weight="1"
	            android:layout_marginLeft="1dp"
				/>

		<Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/main_button_upload_database"
		        android:id="@+id/main_button_upload_database"
		        android:background="@color/main"
		        android:textColor="@color/font_white"
		        android:drawableLeft="@android:drawable/ic_menu_upload"
		        android:layout_weight="1"
		        android:layout_marginLeft="1dp"
				/>

	</LinearLayout>

	<ImageView
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:id="@+id/imageView"
            android:src="@drawable/chicken"
            android:layout_gravity="left|bottom"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

	<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@+id/linearLayout"
			android:layout_above="@+id/imageView"
			android:layout_alignParentRight="false"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="@dimen/activity_vertical_margin">

		<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/imageView2"
				android:layout_gravity="center"
				android:src="@drawable/dialog"
				android:cropToPadding="false"
				android:adjustViewBounds="false"
				android:scaleType="fitXY"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@android:style/TextAppearance.Large"
				android:text="@string/main_view_talk"
				android:id="@+id/main_view_talk"
				android:layout_gravity="center"
				android:singleLine="false"
				android:textStyle="italic"
				android:textColor="@color/font"
				/>
	</FrameLayout>

</RelativeLayout>
